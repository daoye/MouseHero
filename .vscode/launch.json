    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "attach",
            "name": "attach",
            "pid": "${command:pickMyProcess}" // use ${command:pickProcess} to pick other users' processes
        },
        {
            "type": "lldb",
            "request": "attach",
            "name": "attach server",
            "program": "${workspaceFolder}/MouseHero/server/build/linux-x86_64/bin/server"
        },
        {
            "name": "server_gui",
            "cwd": "server_gui",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "server_gui (profile mode)",
            "cwd": "server_gui",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "server_gui (release mode)",
            "cwd": "server_gui",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        }
    ]
}